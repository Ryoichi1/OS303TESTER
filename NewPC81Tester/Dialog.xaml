<Controls:MetroWindow x:Class="NewPC81Tester.Dialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewPC81Tester"
        GlowBrush="{DynamicResource AccentColorBrush}"
        BorderThickness="2"
        ShowTitleBar="False"
        mc:Ignorable="d"
        Height="240" Width="600" WindowStartupLocation="CenterScreen" AllowsTransparency="True" WindowStyle="None" Icon="Resources/VisualStudio_32x.png" BorderBrush="#FFEC09F7" >



    <Canvas x:Name="MainBack" Background="White" Loaded="MainBack_Loaded">
        <Label Content="{Binding DialogMess}" Height="54" Canvas.Left="10" Canvas.Top="17" Width="576" Foreground="#FFD902FB" FontSize="24"/>
        <Button x:Name="ButtonEnter" Content="確認" Style="{DynamicResource SquareButtonStyle}" Height="42" Canvas.Top="132" Width="151" FontSize="24" Foreground="#FFF50C8B" BorderBrush="#FFF50C8B" Background="{x:Null}" Canvas.Left="215" FontFamily="Century Gothic" FontWeight="Normal" BorderThickness="1" Click="ButtonEnter_Click" MouseEnter="ButtonEnter_MouseEnter" MouseLeave="ButtonEnter_MouseLeave"/>

    </Canvas>

</Controls:MetroWindow>
